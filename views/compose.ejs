<%- include('partials/header'); -%>
  <header>
    <h1 id="compose-h1">Compose</h1>
  </header>
  <form method="post" action="/compose" id="form-content">
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="form-floating">
          <textarea name="title" class="form-control" placeholder="Leave a comment here" id="floatingTextarea1"
            style="height: 100px"></textarea>
          <label for="floatingTextarea1">Title</label>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="form-floating">
          <textarea name="post" class="form-control" placeholder="Leave a comment here" id="floatingTextarea2"
            style="height: 100px"></textarea>
          <label for="floatingTextarea2">Nota</label>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-4 col-md-4 col-sm-12">
        <div class="form-floating">
          <input name="categories" type="text" class="form-control" id="floatingInputGrid" placeholder="Comma-separated tags">
          <label for="floatingInputGrid">Categorie (comma-separated)</label>
        </div>
      </div>
      <div class="col-lg-4 col-md-4 col-sm-12">
        <div class="form-floating">
          <input name="author" type="text" class="form-control" id="floatingInputGrid" placeholder="Author Name">
          <label for="floatingInputGrid">Author</label>
        </div>
      </div>
      <!--div class="col-lg-4 col-md-4 col-sm-12">
        <div class="form-floating">
          <input name="place" type="text" class="form-control" id="floatingInputGrid" placeholder="Place"
            value="Bologna">
     i     <label for="floatingInputGrid">Place</label>
        </div>
      </div-->
    </div>

    <button type="submit" id="publish_btn">Publish</button>
  </form>
  <%- include('partials/footer'); -%>
